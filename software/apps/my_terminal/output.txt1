// === Utilities ===
uint8_t reverse_byte(uint8_t b) {
    b = (b >> 4 | b << 4);
    b = ((b & 0xCC) >> 2) | ((b & 0x33) << 2);
    b = ((b & 0xAA) >> 1) | ((b & 0x55) << 1);
    return b;
}

